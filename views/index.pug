doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Informe de Registro de Transacciones
    style
      | body {
      |   font-family: Arial, sans-serif;
      |   margin: 20px;
      | }
      | h1 {
      |   text-align: center;
      |   margin-bottom: 20px;
      | }
      | h2 {
      |   margin-bottom: 10px;
      | }
      | .user-info {
      |   border: 1px solid #ccc;
      |   padding: 10px;
      |   margin-bottom: 20px;
      |   background-color: #f9f9f9;
      | }
      | .user-info p {
      |   margin: 5px 0;
      | }
      | table {
      |   width: 100%;
      |   border-collapse: collapse;
      | }
      | th, td {
      |   border: 1px solid #ccc;
      |   padding: 10px;
      |   text-align: left;
      | }
      | th {
      |   background-color: #f2f2f2;
      | }
      | tr:nth-child(even) {
      |   background-color: #f9f9f9;
      | }
      | .total {
      |   font-weight: bold;
      | }
      | .header {
      |   margin-bottom: 20px;
      | }
      | .date {
      |   font-size: 1.2em;
      |   font-weight: bold;
      | }
      | .transaction-info {
      |   display: flex;
      |   justify-content: space-between;
      |   margin-top: 20px;
      | }
      | .transaction-info span {
      |   flex: 1;
      | }

  body
    .header
      h1 Informe de Registro de Transacciones
      .date Fecha: #{fechaInicial} a #{fechaFinal}
    .user-info
      h2 Datos del Usuario
      p Nombre: #{nombreCompleto}
      p DNI: #{usuario.dni}

    .header
      h3 Cuenta: #{cuenta.nombre_cuenta}

    table
      thead
        tr
          th Fecha
          th Descripción
          th Tipo
          th Importe
      tbody
        each transaccion in transacciones
          tr
            td #{transaccion.fecha}
            td #{transaccion.descripcion}
            td #{transaccion.tipo}
            td #{transaccion.importe} €

      tfoot
        tr
          td(colspan="3" class="total") Total
          td.total #{diferencia} €